{
    "compilerOptions": {
      "target": "es6",
      "outDir": "dist",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "baseUrl": ".",
      "paths": {
        "@app/*": ["./src/*"]
      }
    },
    /*
      "include": [
        "src"
      ]
      */
    "include": ["**/*.ts", "**/*.tsx", "./typings/global.d.ts"],
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
  }
  